<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.min.css"
    />
    <title>My Portfolio Website</title>
  </head>
  <body class="bg-white text-black tracking-wider font-Poppins">
    <%- include('header'); -%> <%- include('footer'); -%>

    <main>
      <!-- Home -->
      <section id="About" class="relative">
        <div
          class="container container-sm container-md container-lg container-xl"
        >
          <div class="flex flex-col items-center gap-5 md:flex-row">
            <!-- content -->
            <div class="w-full space-y-5 lg:w-1/2">
              <h2 class="text-gray-700 mb-2 font-Poppins">Hello, I'm</h2>
              <h1 class="font-Lobster">
                Hanan Mohamud <br />
                <span class="font-Poppins">Backend Developer</span>
              </h1>
              <div
                class="flex flex-col gap-2 md:flex-row md:gap-4 lg:pt-5 xl:pt-10"
              >
                <button class="btn text-white"><span>Download CV</span></button>
                <button class="btn btn_outline">
                  <span>Contact Info</span>
                </button>
              </div>
              <div class="flex items-center gap-5 text-lg md:pt-4">
                <a href="https://www.linkedin.com/in/hananmyusuf"
                  ><i
                    class="ri-linkedin-fill text-gray-700 hover:opacity-80 duration-300 cursor pointer"
                  ></i
                ></a>
                <a href="https://github.com/hananmyy"
                  ><i
                    class="ri-github-fill text-gray-700 hover:opacity-80 duration-300 cursor pointer"
                  ></i
                ></a>
              </div>
            </div>

            <!-- image -->
            <div class="w-full relative lg:w-1/2">
              <img
                src="/img/home_image.jpg"
                alt="Background Image"
                class="rounded-full hover:shadow-2xl hover:-translate-y-1 duration-300"
              />
            </div>
          </div>
        </div>
      </section>

      <!-- About Me -->
      <section id="about" class="relative overflow-hidden">
        <div
          class="flex flex-col items-center gap-3 text-center mb-10 md:mb-20"
        >
          <h2 class="font-Lobster">About Me</h2>
        </div>
        <div class="container space-y-10 xl:space-y-0">
          <!-- item 1 -->
          <div class="flex flex-col items-center md:flex-row gap-5">
            <!-- image -->
            <div class="w-full md:w-1/2">
              <img
                src="/img/about_image.jpg"
                alt="About Image"
                class="w-full sm:w-2/3 lg:w-1/2 xl:w-2/3 mx-auto rounded-4xl hover:shadow-2xl hover:-translate-y-1 duration-300"
              />
            </div>

            <!-- content -->
            <div class="w-full lg:w-1/2">
              <div>
                <h3></h3>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Experience -->
      <section id="experience" class="relative overflow-hidden">
        <div class="text-center font-Lobster mb-10">
          <h2>Experience</h2>
        </div>
        <div class="container flex flex-col md:flex-row gap-4">
          <!-- card 1 -->
          <div
            class="border border-gray-700 p-5 rounded cursor-pointer hover:shadow-2xl hover:-translate-y-1 duration-300 w-full md:w-1/2 space-y-5"
          >
            <div class="flex items-center gap-5">
              <h3 class="font-Poppins">Frontend Development</h3>
            </div>
          </div>

          <!-- card 2 -->
          <div
            class="border border-gray-700 p-5 rounded cursor-pointer hover:shadow-2xl hover:-translate-y-1 duration-300 w-full md:w-1/2 space-y-5"
          >
            <div class="flex items-center gap-5">
              <h3 class="font-Poppins">Backend Development</h3>
            </div>
          </div>
        </div>
      </section>

      <!-- Projects  -->

      <!-- Contact -->
    </main>

    <script src="/js/scripts.js"></script>
  </body>
</html>
